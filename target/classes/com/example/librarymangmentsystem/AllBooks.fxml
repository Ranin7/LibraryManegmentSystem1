<AnchorPane prefHeight="600" prefWidth="600" style="-fx-background-color: #CFD6C4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymangmentsystem.allBooksController">
    <children>
        <!-- Back Button -->
        <Button fx:id="allBook" layoutX="14.0" layoutY="18.0" onAction="#goDashboard" prefHeight="22.0" prefWidth="47.0" style="-fx-background-color: #657166;" text="Back" textFill="#fcf8f8" />

        <!-- Search Field -->
        <TextField fx:id="searchField" layoutX="97.0" layoutY="18.0" prefHeight="26.0" prefWidth="263.0" promptText="Search books by Title, Author, Genre, etc." />

        <ListView fx:id="searchSuggestions" layoutX="97.0" layoutY="44.0" prefWidth="263.0" prefHeight="100.0" visible="false" />

        <!-- Filter Button -->
        <Button alignment="CENTER" layoutX="403.0" layoutY="18.0" mnemonicParsing="false" prefHeight="22.0" prefWidth="134.0" style="-fx-background-color: #FDE8D3;" text="Filter â–¼" textFill="#657166" />

        <!-- Search Icon -->
        <ImageView fitHeight="13.0" fitWidth="18.0" layoutX="340.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@search icon.jpeg" />
            </image>
        </ImageView>

        <!-- Books Display Container -->
        <ScrollPane layoutX="35.0" layoutY="60.0" prefHeight="500.0" prefWidth="530.0" style="-fx-background-color: transparent;">

        <VBox fx:id="booksContainer" layoutX="35.0" layoutY="60.0" prefHeight="500.0" prefWidth="350.0" spacing="10" style="-fx-padding: 10; -fx-spacing: 10;" />
        </ScrollPane>

    </children>
</AnchorPane>
