<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="368.0" prefWidth="602.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymangmentsystem.DashboardController">
   <children>
      <!-- Background Image -->
      <ImageView fx:id="backgroundImage" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@frame1.jpg" />
         </image>
         <!-- Set ImageView to scale as the window grows -->
         <AnchorPane.topAnchor>0.0</AnchorPane.topAnchor>
         <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
         <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
         <AnchorPane.bottomAnchor>0.0</AnchorPane.bottomAnchor>
      </ImageView>

      <!-- Logout Button -->
      <Button fx:id="logoutB" prefHeight="56.0" prefWidth="97.0" style="-fx-background-color: #657166; -fx-font-weight: bold;"
              text="Logout" textFill="WHITE">
         <AnchorPane.bottomAnchor>20.0</AnchorPane.bottomAnchor>
         <AnchorPane.rightAnchor>150.0</AnchorPane.rightAnchor>
      </Button>

      <!-- Create Account Button -->
      <Button fx:id="createAccountB" prefHeight="56.0" prefWidth="97.0" style="-fx-background-color: #657166; -fx-font-weight: bold;"
              text="Create Account" textAlignment="CENTER" textFill="WHITE" wrapText="true">
         <AnchorPane.bottomAnchor>20.0</AnchorPane.bottomAnchor>
         <AnchorPane.leftAnchor>150.0</AnchorPane.leftAnchor>
      </Button>

      <!-- History Button -->
      <Button fx:id="historyB" prefHeight="56.0" prefWidth="97.0" style="-fx-background-color: #657166; -fx-font-weight: bold;"
              text="History" textFill="WHITE">
         <AnchorPane.topAnchor>150.0</AnchorPane.topAnchor>
         <AnchorPane.rightAnchor>100.0</AnchorPane.rightAnchor>
      </Button>

      <!-- Add Reservation Button -->
      <Button fx:id="addReservationB" prefHeight="56.0" prefWidth="97.0" style="-fx-background-color: #657166; -fx-font-weight: bold;"
              text="Add Reservation" textAlignment="CENTER" textFill="WHITE" wrapText="true">
         <AnchorPane.topAnchor>150.0</AnchorPane.topAnchor>
         <AnchorPane.leftAnchor>250.0</AnchorPane.leftAnchor>
      </Button>

      <!-- All Books Button -->
      <Button fx:id="allBooksB" prefHeight="56.0" prefWidth="97.0" style="-fx-background-color: #657166; -fx-font-weight: bold;"
              text="All Books" textFill="WHITE">
         <AnchorPane.topAnchor>50.0</AnchorPane.topAnchor>
         <AnchorPane.leftAnchor>50.0</AnchorPane.leftAnchor>
      </Button>

      <!-- Reservations Button -->
      <Button fx:id="reservation" prefHeight="56.0" prefWidth="97.0" style="-fx-background-color: #657166; -fx-font-weight: bold;"
              text="Reservations" textFill="WHITE">
         <AnchorPane.topAnchor>150.0</AnchorPane.topAnchor>
         <AnchorPane.leftAnchor>50.0</AnchorPane.leftAnchor>
      </Button>

      <!-- Update Book Information Button -->
      <Button fx:id="updateBook" prefHeight="56.0" prefWidth="97.0" style="-fx-background-color: #657166; -fx-font-weight: bold;"
              text="Update Book Information" textAlignment="CENTER" textFill="WHITE" wrapText="true">
         <AnchorPane.topAnchor>50.0</AnchorPane.topAnchor>
         <AnchorPane.rightAnchor>50.0</AnchorPane.rightAnchor>
      </Button>

      <!-- Add Book Button -->
      <Button fx:id="addBookB" prefHeight="56.0" prefWidth="97.0" style="-fx-background-color: #657166; -fx-font-weight: bold;"
              text="Add Book" textFill="WHITE">
         <AnchorPane.topAnchor>50.0</AnchorPane.topAnchor>
         <AnchorPane.leftAnchor>250.0</AnchorPane.leftAnchor>
      </Button>
   </children>
</AnchorPane>
